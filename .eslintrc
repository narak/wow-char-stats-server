{
  "extends": ["next", "prettier", "next/core-web-vitals"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
  },
  "rules": {
    "valid-jsdoc": 2,
    "strict": [1, "global"],
    "semi": [1, "always"],
    "no-eq-null": 2,
    "no-eval": 1,
    "no-extend-native": 2,
    "no-dupe-keys": 2,
    "no-negated-in-lhs": 2,
    "no-undef": 2,
    "no-this-before-super": 1,
    "no-use-before-define": [1, "nofunc"],

    "no-trailing-spaces": 1,
    "no-redeclare": 1,
    "eqeqeq": 2,
    "no-debugger": 1,
    "no-lonely-if": 1,
    "key-spacing": 1,
    "quotes": [1, "single", { "avoidEscape": true }],
    "quote-props": [1, "as-needed"],
    "no-unreachable": 1,
    "curly": 1,
    "guard-for-in": 1,
    "dot-notation": 1,
    "no-caller": 1,
    "no-extra-bind": 1,
    "no-floating-decimal": 1,
    "no-new-wrappers": 1,
    "radix": 1,
    "no-inner-declarations": 1,
    "no-func-assign": 1,
    "no-extra-semi": 1,
    "no-extra-boolean-cast": 1,
    "no-empty": 1,
    "no-unused-vars": 1,
    "no-undef-init": 1,
    "no-shadow-restricted-names": 1,
    "eol-last": 1,
    "no-mixed-spaces-and-tabs": 2,
    "no-multiple-empty-lines": 1,
    "keyword-spacing": 1,
    "space-infix-ops": 1,
    "space-in-parens": [1, "never"],
    "space-before-blocks": [1, "always"],
    "prefer-const": 0,

    "no-spaced-func": 1,
    "comma-spacing": [1, {"before": false, "after": true}],
    "array-bracket-spacing": [1, "never"],
    "semi-spacing": [1, {"before": false, "after": true}],
    "brace-style": [1, "1tbs"],
    "dot-location": [1, "property"],

    // Compatibility flags
    "no-mixed-requires": 0,
    "no-underscore-dangle": 0,
    "new-cap": 0,
    "no-unused-expressions": 0,
    "camelcase": 0,
    "no-alert": 0,
    "no-const-assign": 2
  }
}
